; .editorconfig

root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[**.js]

; Javascript interpreter to be invoked by default 'node'
bin=node
; path = ~/tmp/js-beautify/js/lib/beautify.js

; indent_style = tab
indent_style = space
indent_size = 2
space_in_paren = false
keep_array_indentation = false
keep_function_indentation = false
break_chained_methods = false

[**.css]
indent_style = space
indent_size = 2

[**.html]
indent_style = space
indent_size = 2
